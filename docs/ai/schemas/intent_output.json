{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "IntentOutput",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "intent", "confidence"],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0"]
    },
    "intent": {
      "type": "string",
      "enum": [
        "quote_request",
        "checkout_request",
        "cancel_request",
        "human_handoff",
        "unknown"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "entities": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "checkin": { "type": "string", "format": "date" },
        "checkout": { "type": "string", "format": "date" },
        "guest_count": { "type": "integer", "minimum": 1, "maximum": 20 },
        "room_type_id": { "type": "string" }
      }
    },
    "reason": {
      "type": "string",
      "maxLength": 200
    }
  }
}
